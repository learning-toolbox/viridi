{
  "name": "viridi",
  "version": "0.0.0",
  "description": "A JavaScript static site generator for creating evergreen notes.",
  "main": "dist/node/index.js",
  "typings": "types/index.d.ts",
  "repository": "https://github.com/learning-toolbox/viridi.git",
  "author": "chrisshank <chris.shank.23@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:client dev:node",
    "dev:client": "tsc -w -p src/client",
    "dev:node": "tsc -w -p src/node",
    "dev:demo": "vite demo",
    "build": "rimraf -rf dist && yarn build:client && yarn build:node",
    "build:client": "tsc -p src/client",
    "build:node": "tsc -p src/node"
  },
  "devDependencies": {
    "@types/es-module-lexer": "^0.3.0",
    "@types/node": "^14.14.24",
    "fast-glob": "^3.2.5",
    "npm-run-all": "^4.1.5",
    "remark": "^13.0.0",
    "remark-parse": "^9.0.0",
    "remark-stringify": "^9.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3",
    "unified": "^9.2.0",
    "vite": "^2.0.0-beta.60"
  }
}
