{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "paths": {
      "src/*": ["src/*"],
      "client/*": ["src/client/*"],
      "node/*": ["src/node/*"],
      "/@types/*": ["types/*"],
      "viridi": ["src/client/index.ts"]
    }
  },
  "include": ["src", "demo"]
}
